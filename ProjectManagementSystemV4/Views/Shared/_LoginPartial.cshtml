@using Microsoft.AspNet.Identity
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Manage Password", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
    if (User.IsInRole("Admin"))
    {

        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "navbar-link" })</li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Employee Information
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>@Html.ActionLink("Employees", "Index", "EMPLOYEEs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Timesheets", "Index", "TIMESHEETs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Departments", "Index", "DEPARTMENTs", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Project Information
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>@Html.ActionLink("Clients", "Index", "CLIENTs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Projects", "Index", "PROJECTs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Deliverables", "Index", "DELIVERABLEs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Payments", "Index", "CLIENT_PROJECT", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>          
        </ul>

    }
    else if (User.IsInRole("Manager"))
    {
        <ul class="nav navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Employee Information
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>@Html.ActionLink("Employees", "Index", "EMPLOYEEs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Timesheets", "Index", "TIMESHEETs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Departments", "Index", "DEPARTMENTs", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Project Information
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>@Html.ActionLink("Clients", "Index", "CLIENTs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Projects", "Index", "PROJECTs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Deliverables", "Index", "DELIVERABLEs", null, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Payments", "Index", "CLIENT_PROJECT", null, new { @class = "dropdown-item" })</li>
                </ul>
            </li>          
        </ul>
    }
    else if (User.IsInRole("Employee"))
    {
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Timesheets", "Index", "TIMESHEETs1", null, new { @class = "navbar-link" })</li>
            <li>@Html.ActionLink("Projects", "Index", "PROJECTVIEWs", null, new { @class = "navbar-link" })</li>
            <li>@Html.ActionLink("Deliverables", "Index", "DELIVERABLEVIEWs", null, new { @class = "navbar-link" })</li>
        </ul>
    }
}
else
{

    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Log in", "Login", "Account", null, new { @class = "navbar-link" })</li>
    </ul>
}
